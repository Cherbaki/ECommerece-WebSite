@model RealShop.ViewModels.CategoryModel

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Create Category</h1>

    <hr />
    <div class="row">
        <div style="margin-top:200px;" class="col-md-4">
            <form asp-action="CreateCategory" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MainIconFile" class="control-label"></label>
                    <input asp-for="MainIconFile" class="form-control" />
                    <span asp-validation-for="MainIconFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" accept="image/jpeg,image/png,image/jpj"/>
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
